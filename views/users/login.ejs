 
 <!DOCTYPE html>
 <html lang="en">
 <%- include('../partials/head') %>
<body class="body-form">

    <%- include('../partials/header') %>

     <!-- Form section -->
     <main class="reg-form">
        <div class="header-form">
            <div class="first-line">
                <a href="/"><i class="fas fa-chevron-left" id="back-sign"></i></a>
                <div class="title-form">Iniciar sesión</div>
            </div>
            <span>No tienes una cuenta?</span><span><a href="/users/register"><u>Regístrate</u></a></span>
            </div>


    <form class="main-form" action="/users/login" method="POST">
        <div class="errores">
            <ul></ul>
        </div>
        <div class="control-formulario">
            <label for="email">Email</label><br>
            <input type="email" id="email" name="email" placeholder="ejemplo@nodebike.com.pe">
        </div>

        <div class="control-formulario">
            <label for="contraseña">Clave</label><br>
            <input type="text" name="password" id="password" class="control">
        </div>

        <div class="control-formulario">
            <div class="line"><input type="checkbox" name="guardarContrasenha" value="guardarContrasenha" checked>Recordar usuario y contraseña</div>
        </div>

        <div class="primary-button"><button type="submit" class="boton-formulario">INICIAR SESIÓN</button></div>
    </form>
</main>
     <!--End form section-->

     <!-- Footer -->
     <%- include('../partials/footer') %>
     <script src="/js/loginValidator.js"></script>
</body>
     </html>